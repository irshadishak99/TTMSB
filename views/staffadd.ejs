<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>Staff View</title>

</head>

<body>
  <%- include('partials/header.ejs') %>
  <div id="wrapper">

    <aside id="sidebar-wrapper">
      <div class="sidebar-brand">
        <h2>Admin</h2>
      </div>
      <nav class="main-nav" role="navigation">
      <ul class="sidebar-nav unstyled list-hover-slide">
        
        <li>
          <a href="/staffadd"><i class="fa fa-book"></i>STAFF</a>
        </li>
        
        <li >
          <a href="/delete"><i class="fa fa-gear"></i>delete</a>
        </li>
          <li >
            <a href="/addexporter"><i class="fa fa-gear"></i>Add Exporter</a>
          </li>
          
      </ul>
      </nav>
    </aside>

    <div id="navbar-wrapper">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <h3 style="padding-right: 730px;color: black;">Staffs </h3>
            
          </div>
        </div>
      </nav>
    </div>
    <div class="container"  style="margin-top: 20px;">
        <input class="form-control" style="width: 50%;" id="myInput" type="text" placeholder="Search..">

        <img data-toggle="modal" data-target="#exampleModalCenter" style="float: right;" src="/images/plus.png">

        <br>





        <table style="margin-top: 20px;" class="table table-striped table-class" id="main-table">
          <thead>
            <tr>
              <th>Staff Id </th>
              <th>Staff Full Name</th>
              <th>Staff Email</th>
             
              <th >Action</th>
            </tr>
          </thead>
          <% for(var i=0; i < json.length; i++) { %>
          <tbody id="myTable">

            
            <tr>
              <td><%= json[i].staffID %></td>
              <td><%= json[i].fullName %></td>
              <td><%= json[i].email %></td>
              
              
              <td>
                <form method="GET" action="/staffdel/<%=json[i].staffID%>" style="float:right">
                  <a href="staffedit/<%=json[i].staffID%>" class="btn btn-primary" -->EDIT</a>
                  <input type="submit" class="btn btn-danger" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" />
                  <input type="hidden" name="_method" value="DELETE" />
              </form>
             
            </td>
                
                <!-- <img data-toggle="modal"  data-target="#editModal" src="ic_edit.jpeg"> -->
               
            </tr>
            <% } %>
 

          </tbody>
        </table style="margin-top: 20px;">
      </div>

      <div class="container">
        <div class="form-group" style="float: right; width: 10%;">
          <!--		Show Numbers Of Rows 		-->
          <select class="form-control" name="state" id="maxRows">
            <option value="5000">Show ALL Rows</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="70">70</option>
            <option value="100">100</option>
          </select>

        </div>

        <div class='pagination-container'>
          <nav>
            <ul class="pagination">

              <li data-page="prev">
                <span><
                  <span class="sr-only">(current)
                </span></span>
              </li>
              <!--	Here the JS Function Will Add the Rows -->
              <li data-page="next" id="prev">
                <span> > <span class="sr-only">(current)</span></span>
              </li>
            </ul>
          </nav>
        </div>

      </div>


  <div>



    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">Add Staff</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <form action="addstaff" method="post">
              <div style="margin-top: 50px; padding: 5%; background-color: #f3f3f3;">
                <div class="form-group">
                  <input type="text" class="form-control" name="staffID" placeholder="Staff ID *" value="" required="required" />
                </div>
                <input type="text" class="form-control" name="fullName" placeholder="Staff Full Name *" value=""
                  required="required" />
                <div class="form-group">
                  <input type="password" class="form-control" name="password" placeholder="password *" value="" 
     title="Must contain at least one number and one special character and one uppercase and lowercase letter, and at least 8 or more characters"
                   pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}" required="required" />
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" name="email" placeholder="Email UTHM *" value="" required="required" />
                </div>
              </div>
                <div class="custom-control custom-checkbox my-sm-2">
                  <input type="checkbox" class="custom-control-input style id=" customControlInline style="box-sizing: border-box;">
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Add Staff</button>
                </div>
            
            </form>

          </div>



        </div>
      </div>
    </div>
    
  </div>

  
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <%- include('partials/footer.ejs') %>

</body>

</html>